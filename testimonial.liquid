
{% assign dinger_gen_id = section.id | replace: '_', '' | downcase %}

{% style %}
  .dinger-testimonials-section-{{ dinger_gen_id }} {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.section_padding }}px 20px;
    color: {{ section.settings.text_color }};
  }

  .dinger-testimonials-contdingerner-{{ dinger_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .dinger-testimonials-header-{{ dinger_gen_id }} {
    text-align: center;
    margin-bottom: {{ section.settings.content_spacing }}px;
  }

  .dinger-testimonials-heading-{{ dinger_gen_id }} {
    font-family: {{ settings.heading_font.family }}, {{ settings.heading_font.fallback_families }};
    font-weight: {{ settings.heading_font.weight }};
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.heading_color }};
    margin: 0 0 {{ section.settings.text_spacing }}px 0;
    text-transform: {{ settings.heading_text_transform }};
    letter-spacing: {{ settings.heading_letter_spacing | times: 0.01 }}em;
  }

  .dinger-testimonials-description-{{ dinger_gen_id }} {
    font-family: {{ settings.text_font.family }}, {{ settings.text_font.fallback_families }};
    font-weight: {{ settings.text_font.weight }};
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.description_color }};
    margin: 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .dinger-testimonials-grid-{{ dinger_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: {{ section.settings.testimonial_spacing }}px;
    margin-top: {{ section.settings.content_spacing }}px;
  }

  .dinger-testimonial-card-{{ dinger_gen_id }} {
    background-color: {{ section.settings.card_background }};
    padding: {{ section.settings.card_padding }}px;
    border-radius: {{ section.settings.card_border_radius }}px;
    border: 1px solid {{ section.settings.card_border_color }};
  }

  .dinger-testimonial-quote-{{ dinger_gen_id }} {
    font-family: {{ settings.text_font.family }}, {{ settings.text_font.fallback_families }};
    font-weight: {{ settings.text_font.weight }};
    font-size: {{ section.settings.quote_size }}px;
    color: {{ section.settings.quote_color }};
    line-height: 1.6;
    margin: 0 0 {{ section.settings.text_spacing }}px 0;
    font-style: italic;
  }

  .dinger-testimonial-author-{{ dinger_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .dinger-testimonial-avatar-{{ dinger_gen_id }} {
    width: {{ section.settings.avatar_size }}px;
    height: {{ section.settings.avatar_size }}px;
    border-radius: 50%;
    object-fit: cover;
    background-color: {{ section.settings.avatar_placeholder_color }};
  }

  .dinger-testimonial-avatar-placeholder-{{ dinger_gen_id }} {
    width: {{ section.settings.avatar_size }}px;
    height: {{ section.settings.avatar_size }}px;
    border-radius: 50%;
    background-color: {{ section.settings.avatar_placeholder_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.avatar_size | times: 0.4 }}px;
    font-weight: 600;
  }

  .dinger-testimonial-info-{{ dinger_gen_id }} {
    flex: 1;
  }

  .dinger-testimonial-name-{{ dinger_gen_id }} {
    font-family: {{ settings.heading_font.family }}, {{ settings.heading_font.fallback_families }};
    font-weight: {{ settings.heading_font.weight }};
    font-size: {{ section.settings.name_size }}px;
    color: {{ section.settings.name_color }};
    margin: 0 0 4px 0;
    text-transform: {{ settings.heading_text_transform }};
    letter-spacing: {{ settings.heading_letter_spacing | times: 0.01 }}em;
  }

  .dinger-testimonial-title-{{ dinger_gen_id }} {
    font-family: {{ settings.text_font.family }}, {{ settings.text_font.fallback_families }};
    font-weight: {{ settings.text_font.weight }};
    font-size: {{ section.settings.title_size }}px;
    color: {{ section.settings.title_color }};
    margin: 0;
    opacity: 0.8;
  }

  @media screen and (max-width: 749px) {
    .dinger-testimonials-section-{{ dinger_gen_id }} {
      padding: {{ section.settings.section_padding | times: 0.7 }}px 16px;
    }

    .dinger-testimonials-heading-{{ dinger_gen_id }} {
      font-size: {{ section.settings.heading_size | times: 0.8 }}px;
    }

    .dinger-testimonials-description-{{ dinger_gen_id }} {
      font-size: {{ section.settings.description_size | times: 0.9 }}px;
    }

    .dinger-testimonials-grid-{{ dinger_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ section.settings.testimonial_spacing | times: 0.8 }}px;
    }

    .dinger-testimonial-card-{{ dinger_gen_id }} {
      padding: {{ section.settings.card_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="dinger-testimonials-section-{{ dinger_gen_id }}">
  <div class="dinger-testimonials-contdingerner-{{ dinger_gen_id }}">
    <div class="dinger-testimonials-header-{{ dinger_gen_id }}">
      {% if section.settings.heading != blank %}
        <h2 class="dinger-testimonials-heading-{{ dinger_gen_id }}">{{ section.settings.heading }}</h2>
      {% endif %}
      
      {% if section.settings.description != blank %}
        <div class="dinger-testimonials-description-{{ dinger_gen_id }}">{{ section.settings.description }}</div>
      {% endif %}
    </div>

    <div class="dinger-testimonials-grid-{{ dinger_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign quote_key = 'testimonial_' | append: i | append: '_quote'
          assign name_key = 'testimonial_' | append: i | append: '_name'
          assign title_key = 'testimonial_' | append: i | append: '_title'
          assign image_key = 'testimonial_' | append: i | append: '_image'
          assign enabled_key = 'testimonial_' | append: i | append: '_enabled'

          assign quote = section.settings[quote_key]
          assign name = section.settings[name_key]
          assign title = section.settings[title_key]
          assign image = section.settings[image_key]
          assign enabled = section.settings[enabled_key]
        %}

        {% if enabled and quote != blank %}
          <div class="dinger-testimonial-card-{{ dinger_gen_id }}">
            <blockquote class="dinger-testimonial-quote-{{ dinger_gen_id }}">
              "{{ quote }}"
            </blockquote>
            
            <div class="dinger-testimonial-author-{{ dinger_gen_id }}">
              {% if image %}
                <img 
                  src="{{ image | image_url: width: 100 }}" 
                  alt="{{ name | escape }}"
                  class="dinger-testimonial-avatar-{{ dinger_gen_id }}"
                  width="100"
                  height="100"
                  loading="lazy"
                >
              {% else %}
                <div class="dinger-testimonial-avatar-placeholder-{{ dinger_gen_id }}">
                  {% if name != blank %}
                    {{ name | slice: 0 }}
                  {% else %}
                    ?
                  {% endif %}
                </div>
              {% endif %}
              
              <div class="dinger-testimonial-info-{{ dinger_gen_id }}">
                {% if name != blank %}
                  <div class="dinger-testimonial-name-{{ dinger_gen_id }}">{{ name }}</div>
                {% endif %}
                {% if title != blank %}
                  <div class="dinger-testimonial-title-{{ dinger_gen_id }}">{{ title }}</div>
                {% endif %}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

