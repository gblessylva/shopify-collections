{{ 'section-discovery.css' | asset_url | stylesheet_tag }}

<section class="discovery-section section-{{ section.id }}-padding" style="background-color: {{ section.settings.background_color }};">
  <div class="page-width">
    <div class="discovery-container">
      {% if section.settings.image != blank %}
        <div class="discovery-image-wrapper">
          <img
            src="{{ section.settings.image | image_url: width: 800 }}"
            alt="{{ section.settings.image.alt | escape }}"
            class="discovery-image"
            loading="lazy"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
            sizes="(min-width: 1200px) 50vw, (min-width: 750px) 50vw, 100vw"
            
          >
        </div>
      {% else %}
        <div class="discovery-image-wrapper">
          {{ 'lifestyle-1' | placeholder_svg_tag: 'discovery-image placeholder' }}
        </div>
      {% endif %}

      <div class="discovery-content">
        {% if section.settings.heading != blank %}
          <h2 
            class="discovery-heading" 
            style="font-size: {{ section.settings.heading_size }}px; color: {{ section.settings.heading_color }};"
          >
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <h3 
            class="discovery-subheading" 
            style="font-size: {{ section.settings.subheading_size }}px; color: {{ section.settings.subheading_color }};"
          >
            {{ section.settings.subheading }}
          </h3>
        {% endif %}

        {% if section.settings.text != blank %}
          <div 
            class="discovery-text" 
            style="font-size: {{ section.settings.text_size }}px; color: {{ section.settings.text_color }};"
          >
            {{ section.settings.text }}
          </div>
        {% endif %}

        {% if section.settings.button_text != blank and section.settings.button_url != blank %}
          <div class="discovery-button-wrapper">
            <a 
              href="{{ section.settings.button_url }}" 
              class="discovery-button"
              style="color: {{ section.settings.button_text_color }}; border-color: {{ section.settings.button_border_color }}; font-size: {{ section.settings.button_text_size }}px;"
            >
              {{ section.settings.button_text }}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

{% schema %}
{
  "name": "Discovery",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
