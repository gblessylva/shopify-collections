{% comment %}
  Smart Product Recommendations
  Works with metafield: product.metafields.custom.recommended_products (list of products)
  Randomly selects from the list to show varied recommendations
{% endcomment %}

{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .smart-recommendations {
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .smart-recommendations.loaded {
    opacity: 1;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="smart-recommendations page-width section-{{ section.id }}-padding isolate" 
       id="smartRecs-{{ section.id }}"
       data-section-id="{{ section.id }}">
    
    {% comment %} Check for custom metafield first {% endcomment %}
    {% if product.metafields.custom.recommended_products.value.size > 0 %}
      
      <h2 class="related-products__heading inline-richtext {{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </h2>
      
      <ul class="grid product-grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down"
          role="list"
          data-product-grid>
        
        {% comment %} Render ALL products from metafield, hide them initially {% endcomment %}
        {% for recommended_product in product.metafields.custom.recommended_products.value %}
          <li class="grid__item" data-product-item style="display: none;">
            {% render 'card-product',
              card_product: recommended_product,
              media_aspect_ratio: section.settings.image_ratio,
              image_shape: section.settings.image_shape,
              show_secondary_image: section.settings.show_secondary_image,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating
            %}
          </li>
        {% endfor %}
      </ul>

    {% comment %} Fallback to Shopify's native recommendations {% endcomment %}
    {% elsif section.settings.enable_fallback %}
      
      <product-recommendations
        class="related-products"
        data-url="{{ routes.product_recommendations_url }}?limit={{ section.settings.products_to_show }}"
        data-section-id="{{ section.id }}"
        data-product-id="{{ product.id }}">
        
        {% if recommendations.performed and recommendations.products_count > 0 %}
          <h2 class="related-products__heading inline-richtext {{ section.settings.heading_size }}">
            {{ section.settings.fallback_heading }}
          </h2>
          <ul class="grid product-grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down"
              role="list">
            {% for recommendation in recommendations.products %}
              <li class="grid__item">
                {% render 'card-product',
                  card_product: recommendation,
                  media_aspect_ratio: section.settings.image_ratio,
                  image_shape: section.settings.image_shape,
                  show_secondary_image: section.settings.show_secondary_image,
                  show_vendor: section.settings.show_vendor,
                  show_rating: section.settings.show_rating
                %}
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </product-recommendations>
      
    {% endif %}
  </div>
</div>

<script>
(function() {
  const section = document.getElementById('smartRecs-{{ section.id }}');
  if (!section) return;

  const grid = section.querySelector('[data-product-grid]');
  if (!grid) {
    // No custom recommendations, show section immediately
    section.classList.add('loaded');
    return;
  }

  const items = Array.from(grid.querySelectorAll('[data-product-item]'));
  const limit = {{ section.settings.products_to_show }};
  
  if (items.length === 0) {
    section.classList.add('loaded');
    return;
  }

  // Fisher-Yates shuffle algorithm (more reliable than sort)
  function shuffle(array) {
    const shuffled = [...array];
    for (let i = shuffled.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
    }
    return shuffled;
  }

  // Shuffle and show limited items
  const shuffled = shuffle(items);
  const toShow = Math.min(limit, shuffled.length);
  
  shuffled.slice(0, toShow).forEach(item => {
    item.style.display = '';
  });
  
  // Remove excess items from DOM
  shuffled.slice(toShow).forEach(item => {
    item.remove();
  });

  // Show section with fade-in
  section.classList.add('loaded');
})();
</script>

{% schema %}
{
  "name": "Smart Recommendations",
  "settings": [
    {
      "type": "paragraph",
      "content": "Add products to the 'custom.recommended_products' metafield to show curated recommendations. Falls back to Shopify's algorithm if none are set."
    },
