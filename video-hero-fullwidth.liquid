{% comment %}
  Full Width Video Hero Section
  Background video with heading, paragraph, and CTA button
{% endcomment %}

{%- style -%}
  .video-hero-fullwidth-{{ section.id }} {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .video-hero-fullwidth-background-{{ section.id }} {
    position: fixed;
    top: 50%;
    left: 50%;
    width: 100vw;
    height: 100vh;
    object-fit: cover;
    transform: translate(-50%, -50%);
    z-index: 1;
  }

  .video-hero-fullwidth-overlay-{{ section.id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ section.settings.overlay_opacity }});
    z-index: 2;
  }

  .video-hero-fullwidth-content-{{ section.id }} {
    position: relative;
    z-index: 3;
    text-align: {{ section.settings.text_alignment }};
    color: {{ section.settings.text_color }};
    max-width: {{ section.settings.content_max_width }}px;
    padding: 0 20px;
  }

  .video-hero-fullwidth-content-{{ section.id }} > * {
    margin: 0;
  }

  .video-hero-fullwidth-content-{{ section.id }} .video-hero-heading {
    margin-bottom: 16px;
  }

  .video-hero-fullwidth-content-{{ section.id }} .video-hero-paragraph {
    margin-bottom: 24px;
  }
{%- endstyle -%}

<div class="video-hero-fullwidth-{{ section.id }}">
  {% if section.settings.video_url != blank %}
    <video
      class="video-hero-fullwidth-background-{{ section.id }}"
      autoplay
      muted
      loop
      playsinline
      {% if section.settings.video_poster %}
        poster="{{ section.settings.video_poster | image_url: width: 1920 }}"
      {% endif %}
    >
      <source src="{{ section.settings.video_url }}" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  {% elsif section.settings.video_poster %}
    <img
      class="video-hero-fullwidth-background-{{ section.id }}"
      src="{{ section.settings.video_poster | image_url: width: 1920 }}"
      alt="{{ section.settings.heading | escape }}"
      loading="lazy"
    >
  {% else %}
    <div class="video-hero-fullwidth-background-{{ section.id }}" style="background-color: #cccccc;"></div>
  {% endif %}

  <div class="video-hero-fullwidth-overlay-{{ section.id }}"></div>

  <div class="video-hero-fullwidth-content-{{ section.id }} page-width">
    {% if section.settings.heading != blank %}
      <h1 class="video-hero-heading">{{ section.settings.heading }}</h1>
    {% endif %}

    {% if section.settings.paragraph != blank %}
      <p class="video-hero-paragraph">{{ section.settings.paragraph }}</p>
    {% endif %}

    {% if section.settings.button_text != blank %}
      <a
        href="{% if section.settings.button_link != blank %}{{ section.settings.button_link }}{% else %}#{% endif %}"
        class="button"
      >
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Video Hero Fullwidth",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Video Settings"
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "Video URL",
      "info": "Upload video to Shopify Files and paste the URL here. Supports MP4 format."
    },
    {
      "type": "image_picker",
      "id": "video_poster",
      "label": "Video Poster Image",
      "info": "Fallback image shown before video loads or if video fails"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "Discover our amazing collection of products"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {"value": "left", "label": "Left"},
        {"value": "center", "label": "Center"},
        {"value": "right", "label": "Right"}
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "content_max_width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Content Maximum Width",
      "default": 800
    },
    {
      "type": "header",
      "content": "Overlay"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 0.9,
      "step": 0.1,
      "label": "Overlay Opacity",
      "default": 0.4,
      "info": "Darkens the video for better text readability"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Video Hero Fullwidth"
    }
  ]
}
{% endschema %}
