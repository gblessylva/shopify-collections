{% comment %}
  Product FAQ Snippet
  Renders an accordion-style FAQ section with customizable questions and answers
  Supports both metaobject FAQs and manual block settings
{% endcomment %}

{%- assign metafield_faqs = product.metafields.custom.product_faq.value -%}

<div class="product-faq" {{ block.shopify_attributes }}>
  {% if block.settings.faq_heading != blank %}
    <h2 class="product-faq__heading" style="color: {{ block.settings.heading_color }};">
      {{ block.settings.faq_heading }}
    </h2>
  {% endif %}

  <div class="product-faq__list">
    {% comment %} First, render FAQs from metaobjects {% endcomment %}
    {% if metafield_faqs and metafield_faqs.size > 0 %}
      {% for faq in metafield_faqs %}
        {% if faq.question and faq.answer %}
          <details class="product-faq__item" style="border-color: {{ block.settings.border_color }};">
            <summary class="product-faq__question" style="color: {{ block.settings.question_color }};">
              <span class="product-faq__question-text">{{ faq.question }}</span>
              <span class="product-faq__icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="6 9 12 15 18 9"></polyline>
                </svg>
              </span>
            </summary>
            <div class="product-faq__answer rte" style="color: {{ block.settings.answer_color }};">
              {{ faq.answer }}
            </div>
          </details>
        {% endif %}
      {% endfor %}
    {% endif %}

    {% comment %} Then, render manual FAQs from block settings {% endcomment %}
    {% for i in (1..10) %}
      {% assign question_key = 'question_' | append: i %}
      {% assign answer_key = 'answer_' | append: i %}
      {% assign question = block.settings[question_key] %}
      {% assign answer = block.settings[answer_key] %}
      
      {% if question != blank and answer != blank %}
        <details class="product-faq__item" style="border-color: {{ block.settings.border_color }};">
          <summary class="product-faq__question" style="color: {{ block.settings.question_color }};">
            <span class="product-faq__question-text">{{ question }}</span>
            <span class="product-faq__icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="6 9 12 15 18 9"></polyline>
              </svg>
            </span>
          </summary>
          <div class="product-faq__answer rte" style="color: {{ block.settings.answer_color }};">
            {{ answer }}
          </div>
        </details>
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
.product-faq {
  margin: 24px 0;
}

.product-faq__heading {
  font-size: 24px;
  font-weight: 600;
  margin-bottom: 20px;
  line-height: 1.3;
}

.product-faq__list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.product-faq__item {
  border: 1px solid;
  border-radius: 8px;
  overflow: hidden;
  transition: all 0.3s ease;
}

.product-faq__item:hover {
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.product-faq__question {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 20px;
  cursor: pointer;
  font-weight: 600;
  font-size: 16px;
  line-height: 1.5;
  list-style: none;
  user-select: none;
  transition: background-color 0.2s ease;
}

.product-faq__question::-webkit-details-marker {
  display: none;
}

.product-faq__question:hover {
  background-color: rgba(0, 0, 0, 0.02);
}

.product-faq__question-text {
  flex: 1;
  padding-right: 16px;
}

.product-faq__icon {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s ease;
}

.product-faq__item[open] .product-faq__icon {
  transform: rotate(180deg);
}

.product-faq__answer {
  padding: 0 20px 20px 20px;
  font-size: 15px;
  line-height: 1.7;
}

.product-faq__answer p {
  margin: 0 0 12px 0;
}

.product-faq__answer p:last-child {
  margin-bottom: 0;
}

/* Responsive adjustments */
@media screen and (max-width: 749px) {
  .product-faq {
    margin: 20px 0;
  }

  .product-faq__heading {
    font-size: 20px;
    margin-bottom: 16px;
  }

  .product-faq__question {
    padding: 14px 16px;
    font-size: 15px;
  }

  .product-faq__answer {
    padding: 0 16px 16px 16px;
    font-size: 14px;
  }
}
</style>
