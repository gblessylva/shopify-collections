{% doc %}
  @prompt
    Create a section. The section has three columns (35, 30, 35). All columns have equal height. First column is image, second column has two rows (40%, 60%). The top row of the second column is image, the bottom row of the second column has a heading, and cta button that leads to a collection. The right column of the 3 columns is image
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-three-column-section-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-three-column-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-three-column-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 35% 30% 35%;
    gap: {{ block.settings.column_gap }}px;
    height: {{ block.settings.section_height }}px;
  }

  .ai-three-column-left-{{ ai_gen_id }},
  .ai-three-column-right-{{ ai_gen_id }},
  .ai-three-column-center-{{ ai_gen_id }} {
    position: relative;
    border-radius: {{ block.settings.image_border_radius }}px;
    max-height: 600px;
  }

  .ai-three-column-left-{{ ai_gen_id }} img,
  .ai-three-column-right-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-three-column-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-three-column-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-three-column-center-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.column_gap }}px;
  }

  .ai-three-column-center-top-{{ ai_gen_id }} {
    flex: 0 0 40%;
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-three-column-center-top-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-three-column-center-bottom-{{ ai_gen_id }} {
    flex: 0 0 calc(60% - {{ block.settings.column_gap }}px);
    display: flex;
    flex-direction: column;
    justify-content:center;
    align-items: {{ block.settings.content_alignment }};
    text-align: {{ block.settings.text_alignment }};
    padding: {{ block.settings.content_padding }}px;
    background-color: {{ block.settings.content_background_color }};
    border-radius: {{ block.settings.content_border_radius }}px;
  }

  .ai-three-column-heading-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    line-height: 1.2;
  }

  .ai-three-column-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  .ai-three-column-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  @media screen and (max-width: 989px) {
    .ai-three-column-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      height: auto;
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-three-column-left-{{ ai_gen_id }},
    .ai-three-column-right-{{ ai_gen_id }},
    .ai-three-column-center-top-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_image_height }}px;
    }

    .ai-three-column-center-{{ ai_gen_id }} {
      gap: {{ block.settings.mobile_gap }}px;
      justify-content: space-between;
    }

    .ai-three-column-center-top-{{ ai_gen_id }} {
      overflow: unset;
    }

    .ai-three-column-center-bottom-{{ ai_gen_id }} {
      flex: 0 0 auto;
      min-height: 200px; 
    }

    .ai-three-column-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-three-column-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-three-column-container-{{ ai_gen_id }}">
    <div class="ai-three-column-grid-{{ ai_gen_id }}">
      <div class="ai-three-column-left-{{ ai_gen_id }}">
        {% if block.settings.left_image %}
          <img
            src="{{ block.settings.left_image | image_url: width: 1000 }}"
            alt="{{ block.settings.left_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.left_image.width }}"
            height="{{ block.settings.left_image.height }}"
          >
        {% else %}
          <div class="ai-three-column-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>

      <div class="ai-three-column-center-{{ ai_gen_id }}">
        <div class="ai-three-column-center-top-{{ ai_gen_id }}">
          {% if block.settings.center_image %}
            <img
              src="{{ block.settings.center_image | image_url: width: 800 }}"
              alt="{{ block.settings.center_image.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.center_image.width }}"
              height="{{ block.settings.center_image.height }}"
            >
          {% else %}
            <div class="ai-three-column-image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>

        <div class="ai-three-column-center-bottom-{{ ai_gen_id }}">
          {% if block.settings.heading != blank %}
            <h2 class="ai-three-column-heading-{{ ai_gen_id }}">
              {{ block.settings.heading }}
            </h2>
          {% endif %}

          {% if block.settings.collection != blank %}
            <a
              href="{{ block.settings.collection.url }}"
              class="ai-three-column-button-{{ ai_gen_id }}"
            >
              {{ block.settings.button_text }}
            </a>
          {% else %}
            <a
              href="#"
              class="ai-three-column-button-{{ ai_gen_id }}"
            >
              {{ block.settings.button_text }}
            </a>
          {% endif %}
        </div>
      </div>

      <div class="ai-three-column-right-{{ ai_gen_id }}">
        {% if block.settings.right_image %}
          <img
            src="{{ block.settings.right_image | image_url: width: 1000 }}"
            alt="{{ block.settings.right_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.right_image.width }}"
            height="{{ block.settings.right_image.height }}"
          >
        {% else %}
          <div class="ai-three-column-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

