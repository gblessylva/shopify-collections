{% doc %}
  @prompt
    Create a three layout sections. The first column is a carousel of images that can either scroll from up to down or down to up. The images have equal width, but should have varying  heights to give the impression of masonry. The center section is a heading, and a button that link to a product collection. The right section/column has same features as left/first but images sources should be different. user can add up to 10 images on each carousel column
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-masonry-carousel-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1.5fr 1fr;
    gap: 40px;
    align-items: center;
    padding: 60px 20px;
    background-color: {{ block.settings.background_color }};
    overflow: hidden;
  }

  .ai-masonry-carousel__column-{{ ai_gen_id }} {
    position: relative;
    height: {{ block.settings.carousel_height }}px;
    overflow: hidden;
  }

  .ai-masonry-carousel__track-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.image_gap }}px;
    will-change: transform;
  }

  .ai-masonry-carousel__track-{{ ai_gen_id }}--up {
    animation: ai-masonry-scroll-up-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
  }

  .ai-masonry-carousel__track-{{ ai_gen_id }}--down {
    animation: ai-masonry-scroll-down-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
  }

  .ai-masonry-carousel__column-{{ ai_gen_id }}:hover .ai-masonry-carousel__track-{{ ai_gen_id }} {
    animation-play-state: paused;
  }

  .ai-masonry-carousel__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-masonry-carousel__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .ai-masonry-carousel__placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-masonry-carousel__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    display: block;
  }

  .ai-masonry-carousel__center-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
  }

  .ai-masonry-carousel__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 20px;
    line-height: 1.2;
  }

  .ai-masonry-carousel__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0 0 30px;
    line-height: 1.5;
  }

  .ai-masonry-carousel__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 15px 40px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .ai-masonry-carousel__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  @keyframes ai-masonry-scroll-up-{{ ai_gen_id }} {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(-50%);
    }
  }

  @keyframes ai-masonry-scroll-down-{{ ai_gen_id }} {
    0% {
      transform: translateY(-50%);
    }
    100% {
      transform: translateY(0);
    }
  }

  @media screen and (max-width: 989px) {
    .ai-masonry-carousel-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .ai-masonry-carousel__column-{{ ai_gen_id }} {
      height: 400px;
    }

    .ai-masonry-carousel__center-{{ ai_gen_id }} {
      order: -1;
      padding: 20px;
    }

    .ai-masonry-carousel__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.7);
    }

    .ai-masonry-carousel__subheading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheading_size }}px * 0.9);
    }
  }
{% endstyle %}

<masonry-carousel-{{ ai_gen_id }} class="ai-masonry-carousel-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-masonry-carousel__column-{{ ai_gen_id }}">
    <div class="ai-masonry-carousel__track-{{ ai_gen_id }} ai-masonry-carousel__track-{{ ai_gen_id }}--{{ block.settings.left_scroll_direction }}" data-column="left">
      {% for i in (1..10) %}
        {% assign image_key = 'left_image_' | append: i %}
        {% assign height_key = 'left_height_' | append: i %}
        {% assign image = block.settings[image_key] %}
        {% assign height = block.settings[height_key] %}
        
        {% if image %}
          <div class="ai-masonry-carousel__image-wrapper-{{ ai_gen_id }}">
            <img
              src="{{ image | image_url: width: 600 }}"
              alt="{{ image.alt | escape }}"
              width="600"
              height="{{ height }}"
              loading="lazy"
              class="ai-masonry-carousel__image-{{ ai_gen_id }}"
              style="height: {{ height }}px;"
            >
          </div>
        {% endif %}
      {% endfor %}
      {% for i in (1..10) %}
        {% assign image_key = 'left_image_' | append: i %}
        {% assign height_key = 'left_height_' | append: i %}
        {% assign image = block.settings[image_key] %}
        {% assign height = block.settings[height_key] %}
        
        {% if image %}
          <div class="ai-masonry-carousel__image-wrapper-{{ ai_gen_id }}">
            <img
              src="{{ image | image_url: width: 600 }}"
              alt="{{ image.alt | escape }}"
              width="600"
              height="{{ height }}"
              loading="lazy"
              class="ai-masonry-carousel__image-{{ ai_gen_id }}"
              style="height: {{ height }}px;"
            >
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <div class="ai-masonry-carousel__center-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-masonry-carousel__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}
    
    {% if block.settings.subheading != blank %}
      <div class="ai-masonry-carousel__subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
    {% endif %}
    
    {% if block.settings.button_text != blank %}
      <a href="{{ block.settings.button_link }}" class="ai-masonry-carousel__button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>

  <div class="ai-masonry-carousel__column-{{ ai_gen_id }}">
    <div class="ai-masonry-carousel__track-{{ ai_gen_id }} ai-masonry-carousel__track-{{ ai_gen_id }}--{{ block.settings.right_scroll_direction }}" data-column="right">
      {% for i in (1..10) %}
        {% assign image_key = 'right_image_' | append: i %}
        {% assign height_key = 'right_height_' | append: i %}
        {% assign image = block.settings[image_key] %}
        {% assign height = block.settings[height_key] %}
        
        {% if image %}
          <div class="ai-masonry-carousel__image-wrapper-{{ ai_gen_id }}">
            <img
              src="{{ image | image_url: width: 600 }}"
              alt="{{ image.alt | escape }}"
              width="600"
              height="{{ height }}"
              loading="lazy"
              class="ai-masonry-carousel__image-{{ ai_gen_id }}"
              style="height: {{ height }}px;"
            >
          </div>
        {% endif %}
      {% endfor %}
      {% for i in (1..10) %}
        {% assign image_key = 'right_image_' | append: i %}
        {% assign height_key = 'right_height_' | append: i %}
        {% assign image = block.settings[image_key] %}
        {% assign height = block.settings[height_key] %}
        
        {% if image %}
          <div class="ai-masonry-carousel__image-wrapper-{{ ai_gen_id }}">
            <img
              src="{{ image | image_url: width: 600 }}"
              alt="{{ image.alt | escape }}"
              width="600"
              height="{{ height }}"
              loading="lazy"
              class="ai-masonry-carousel__image-{{ ai_gen_id }}"
              style="height: {{ height }}px;"
            >
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</masonry-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class MasonryCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tracks = this.querySelectorAll('.ai-masonry-carousel__track-{{ ai_gen_id }}');
        this.setupCarousels();
      }

      setupCarousels() {
        this.tracks.forEach((track) => {
          const images = track.querySelectorAll('.ai-masonry-carousel__image-wrapper-{{ ai_gen_id }}');
          if (images.length === 0) {
            track.style.animation = 'none';
          }
        });
      }
    }

    customElements.define('masonry-carousel-{{ ai_gen_id }}', MasonryCarousel{{ ai_gen_id }});
  })();
</script>

